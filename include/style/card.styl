/* ---------------------------------
 *              Card
 * --------------------------------- */
.card
    overflow: visible
    border-radius: $card-radius

    & + .card, & + .column-right-shadow
        margin-top: 1.5rem

    .card-image
        overflow: hidden
        border-top-left-radius: $card-radius
        border-top-right-radius: $card-radius

    .media + .media
        border: none
        margin-top: 0

    h1
        font-weight: bold

    h2
        font-weight: bold

    h3
        font-weight: bold

    h4
        font-weight: bold

    h5
        font-weight: bold